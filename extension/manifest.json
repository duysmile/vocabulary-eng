{
    "short_name": "Eng4Me",
    "name": "My extension for learning English",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Learn English by love!",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "onepiece.png",
        "default_popup": "popup.html"
    }
}